# PuckSwap v5 Environment Configuration
# Copy this file to .env and update with your actual values

# ========== NETWORK CONFIGURATION ==========
# Options: mainnet, preprod, preview
NETWORK=preprod
NEXT_PUBLIC_NETWORK=preprod

# ========== BLOCKFROST API CONFIGURATION ==========
# Get your API keys from https://blockfrost.io/
BLOCKFROST_API_KEY_MAINNET=mainnet6q2cu8SKVFP3cUMR6yQp2fTK9xh7Gji7
BLOCKFROST_API_KEY_PREPROD=preprodd86p4euUeF6yIUbwl03sJJMD03aICMxL
BLOCKFROST_API_KEY_PREVIEW=preprodd86p4euUeF6yIUbwl03sJJMD03aICMxL

# Legacy support
NEXT_PUBLIC_PREPROD_API_KEY=preprodd86p4euUeF6yIUbwl03sJJMD03aICMxL
NEXT_PUBLIC_MAINNET_API_KEY=mainnet6q2cu8SKVFP3cUMR6yQp2fTK9xh7Gji7
BLOCKFROST_API_KEY=preprodd86p4euUeF6yIUbwl03sJJMD03aICMxL
NEXT_PUBLIC_BLOCKFROST_API_KEY=preprodd86p4euUeF6yIUbwl03sJJMD03aICMxL

# ========== CONTEXT7 CONFIGURATION ==========
# Context7 indexer endpoints and API keys
CONTEXT7_ENDPOINT_MAINNET=https://api.context7.io/mainnet
CONTEXT7_ENDPOINT_PREPROD=https://api.context7.io/preprod
CONTEXT7_ENDPOINT_PREVIEW=https://api.context7.io/preview
CONTEXT7_API_KEY=your_context7_api_key_here
NEXT_PUBLIC_CONTEXT7_API_KEY=your_context7_api_key_here

# ========== APPLICATION CONFIGURATION ==========
# Demo mode for showcasing without real transactions
NEXT_PUBLIC_DEMO_MODE=true
DEMO_MODE=true

# Debug mode for development
DEBUG=false
NODE_ENV=development

# Mock mode for testing
MOCK_MODE=false
PUCKSWAP_MOCK_MODE=false

# ========== FEATURE FLAGS ==========
# Enable/disable specific PuckSwap v5 features
ENABLE_GOVERNANCE=true
ENABLE_LIQUID_STAKING=true
ENABLE_CROSS_CHAIN=false
ENABLE_TREASURY=true
ENABLE_BONDING_CURVE=false
ENABLE_ADVANCED_TRADING=false

# ========== LEGACY CONFIGURATION ==========
# Provider Type (blockfrost, kupmios, maestro, koios)
NEXT_PUBLIC_PROVIDER_TYPE=blockfrost

# ========== TESTING CONFIGURATION ==========
# Test environment settings
TEST_NETWORK=preprod
MOCK_WALLET=false

# ========== MONITORING & ANALYTICS ==========
# Optional: Analytics and monitoring
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
ENABLE_ANALYTICS=true

# ========== NOTES ==========
# 1. Never commit real API keys to version control
# 2. Use different keys for different environments
# 3. Test configuration with: npm run test-env
# 4. Switch networks with: NETWORK=mainnet npm run test-env-mainnet
